@page "/"

@inject IInterestManager InterestManager
@inject ILoginManager LoginManager


<PageTitle>Index</PageTitle>
<h3>Login</h3>
<Login></Login>
<h3>Signup</h3>
<Signup></Signup>

<h4>You're logged in as:</h4>
<h5>@Username</h5>
<table class="table m-2">
    <thead>
        <tr>
            <th>Interest</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Interest)
        {
            <tr>            
                <td>        
                    @item.Name           
                </td>           
                <td>               
                    <button class="btn btn-primary" style="background-color:green">Add</button>
                    <button class="btn btn-primary" style="background-color:red">Remove</button>
               </td>
            </tr>
        }
    </tbody>
</table>
@code {
    [Parameter]
    public List<InterestModel>? Interest { get; set; } = new();

    string Username { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var UserResult = await LoginManager.GetLoggedInUser();
        if(UserResult != null)
        {
            Username = UserResult.Username;
        }

        Interest = await InterestManager.GetInterests();
    }
}