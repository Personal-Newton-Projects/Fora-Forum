@page "/interest"
@inject IInterestManager InterestManager
<h3>Interest</h3>

<table class="table m-2">
    <thead>
    <tr>
        <th>Interest</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Intresse)
    {
        <tr>            
            <td>        
                @item.Name
            </td>           
            <td>               
                <button class="btn btn-primary" style="background-color:green">Add</button>
                <button class="btn btn-primary" style="background-color:red">Remove</button>
            </td>
        </tr>
    }
    </tbody>
</table>
<EditForm Model="UserInterest" OnSubmit="SubmitInterest">
    <InputRadioGroup @bind-Value="InterestManager.UserInterest">
        @foreach (var unit in InterestManager.UserInterest)
        {
            <InputRadio Value="@unit.InterestId">@unit.Interest</InputRadio>    
        }
    </InputRadioGroup>
</EditForm>

@code {
    [Parameter]
    public List<InterestModel>? Intresse { get; set; } = new();

    [Parameter]
    public List<UserInterestModel> UserInterest { get; set; } = new();

    int interestId = 0;
    
    protected override async Task OnInitializedAsync()
    {
        Intresse = await InterestManager.GetInterests();
    }

    public async Task SubmitInterest()
    {
        InterestManager.UserInterest.FirstOrDefault(i => i.InterestId == interestId);
       // await InterestManager.PostInterest(UserInterest);
    }

}